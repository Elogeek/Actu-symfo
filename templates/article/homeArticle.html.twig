{% extends '/_partials/base.html.twig' %}

{% block title %} Articles {% endblock %}

{% block body %}

    {# news with Mediastack #}
    {% for article in allNews %}
        <div class='container_articles'>
            <h2>{{article["title"]}}</h2>
            <div>
                <img alt="{{ article['title'] }}" src="{{ article['urlToImage'] }}">
            </div>
            <div>
                <p>{{article["description"]}}</p>
            </div>
            <p>{{ article['published_at'] }} by {{ article['author'] }}</p>
            <a href="{{ article['url'] }}">Lire plus <box-icon name='right-arrow-alt'></box-icon></a> }
        </div>
    {% endfor %}

